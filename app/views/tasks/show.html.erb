<h1><%= @task.title %></h1>
<%= @task.details %><br>
  <% if @task.completed == true %>
    <%= check_box("task", @task.id, {checked:true})%>
    This task is done!
  <% else %>
    <%= check_box("task", @task.id, {checked:false})%>
    This task is not completed!
  <% end %><br>
<%= link_to "Update your task", edit_task_path %><br>
<%= link_to 'Back to list', tasks_path %>
